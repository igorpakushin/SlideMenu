<?xml version="1.0" encoding="utf-8"?>
<com.yme.customization.NavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dp" android:layout_width="fill_parent"
    android:background="#ff00ff00" >

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/navigation_layout">
        <LinearLayout android:id="@+id/leftPane" android:layout_width="wrap_content" android:layout_height="fill_parent" android:gravity="center" android:orientation="horizontal" android:paddingTop="5dp">


        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="The title" />

        <LinearLayout
            android:id="@+id/rightPane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/back_left"
                android:height="30dip"
                android:text="forth" />
        </LinearLayout>
        
    </RelativeLayout>

    
</com.yme.customization.NavigationBar>